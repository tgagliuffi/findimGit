		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">
	
	<context:component-scan base-package="com.bbva.server.controller" />
	<context:component-scan base-package="com.bbva.server" /> 
	<!-- ppazos: scan Oracle -->
	<context:component-scan base-package="com.bbva.findim.service" />
	<context:component-scan base-package="com.bbva.findim.dao" />
	
	<task:annotation-driven /> 
	
	<tx:annotation-driven transaction-manager="transactionManager" />
	<!-- datasource config -->
    <context:property-placeholder location="file:${findim-ws.config.path}/findim-ws.properties" />
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourceFindim" />
	</bean>
	<!-- conexion oracle -->
	<bean id="dataSourceFindim" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="${database.findim}" />
	</bean>
	<bean id="jdbcTemplateFindim" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSourceFindim"></property>
	</bean>
	
	<bean class="com.bbva.findim.dao.impl.ParametroDaoImpl" id="parametroDaoImpl" >
		<property name="jdbcTemplate" ref="jdbcTemplateFindim"></property>
	</bean>
	<bean class="com.bbva.findim.dao.impl.DatoReniecDaoImpl" id="datoReniecDaoImpl" >
		<property name="jdbcTemplate" ref="jdbcTemplateFindim"></property>
	</bean>
	<bean class="com.bbva.findim.dao.impl.EmpresaDaoImpl" id="empresaDaoImpl" >
		<property name="jdbcTemplate" ref="jdbcTemplateFindim"></property>
	</bean>
</beans>